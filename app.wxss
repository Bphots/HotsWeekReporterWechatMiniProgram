/**app.wxss**/

.container {
  align-items: center;
  display: flex;
  flex-direction: column;
  /* align-items: center; *//* justify-content: space-between; *//* padding: 200rpx 0; *//* box-sizing: border-box; */
  font-size: 32rpx;
}

.inform {
  background-color: #666;
  padding: 20rpx 10rpx;
  color: #fff;
  text-align: center;
  font-size: 28rpx;
}

.head {
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #4a196b;
  align-items: center;
}

.medium {
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  align-items: center;
}

.title {
  width: 100%;
  text-align: center;
  margin-top: 100rpx;
  font-size: 70rpx;
}

.subtitle {
  width: 100%;
  color: #fff;
  text-align: center;
  margin-top: 100rpx;
  font-size: 40rpx;
  font-weight: bold;
}

.desc {
  width: 80%;
  text-align: center;
  align-items: center;
  margin-top: 60rpx;
}

.text-white {
  color: #fff;
}

.text-wheat {
  color: wheat;
}

.text-grey {
  color: #999;
}

.foot {
  background-color: #4a196b;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.top {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 40rpx;
  padding: 0 50rpx;
  width: 100%;
  box-sizing: border-box;
}

.top-logo {
  width: 70rpx;
  height: 70rpx;
  float: left;
}

.top-nickname {
  color: #fff;
  text-align: right;
  float: right;
  flex-grow: 1;
}

.btn {
  width: 500rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 100rpx auto;
  font-size: 36rpx;
}

.btn-s {
  width: 200rpx;
  height: 80rpx;
  padding: 0;
  font-size: 32rpx;
}

.btn-tighten {
  margin: 30rpx auto;
}

.btn-wheat {
  background-color: wheat;
  color: #000;
  border-color: wheat;
  border-style: solid;
  border-width: 1px;
}

.btn-wheat-hover {
  background-color: #dec9a2;
}

.btn-purple {
  color: #4a196b;
  border-color: #4a196b;
  border-style: solid;
  border-width: 1px;
}
