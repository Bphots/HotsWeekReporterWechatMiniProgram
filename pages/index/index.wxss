/**index.wxss**/

.area {
  width: 100%;
  margin-top: 100rpx;
}

.area-row {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.area-row-each {
  width: 50%;
  text-align: center;
  color: #fff;
}

.medal-draw {
  box-sizing: border-box;
  width: 100%;
  margin-top: 100rpx;
  padding: 0 50rpx;
}

.medal-draw-desc {
  text-align: center;
}

.gametotal {
  margin-bottom: 100rpx;
  margin-top: 50rpx;
  font-size: 24rpx;
  text-align: center;
  color: #999;
}

.events {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.events-swiper {
  height: 400rpx;
}

.counter-title {
  width: 100%;
  display: flex;
  flex-direction: row;
  padding-top: 100rpx;
}

.counter-title-each {
  width: 50%;
  text-align: center;
  color: #000;
  font-weight: bold;
}

.counter-data {
  width: 100%;
  display: flex;
  flex-direction: row;
  padding-top: 20rpx;
}

.counter-data-each {
  width: 50%;
  text-align: center;
  color: #999;
}
